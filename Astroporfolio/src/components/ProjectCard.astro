---
interface Props {
  title: string;
  subtitle: string;
  imgSrc: string;
  reverse?: boolean;
}

const { title, subtitle, imgSrc, reverse = false } = Astro.props;
---

<a 
  href="#" 
  class:list={[
    "group flex items-center justify-between gap-16 py-16 w-full no-underline", 
    "text-gray-900", 
    { "flex-row-reverse": reverse }
  ]}
>
  <div class="flex-1 pr-8">
    <h3 class="font-display text-7xl">
      {title}
    </h3>
    <p class="font-sans text-gray-600 mt-2"> 
      {subtitle}
    </p>
  </div>

  <div class="flex-1 flex justify-center items-center pl-8">
    <div 
      class:list={[
        "overflow-hidden rounded-lg w-auto max-w-sm shadow-xl",
        "transition-transform duration-300 ease-in-out",
        reverse ? "rotate-2" : "-rotate-2",
        "group-hover:rotate-0"
      ]}
    >
      <img 
        src={imgSrc} 
        alt={title} 
        class="w-full h-auto object-cover grayscale transition-all duration-300 ease-in-out group-hover:grayscale-0 group-hover:scale-105"
      />
    </div>
  </div>
</a>