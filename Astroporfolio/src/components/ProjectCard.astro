---
interface Props {
  title: string;
  subtitle: string;
  imgSrc: string;
  reverse?: boolean;
}

const { title, subtitle, imgSrc, reverse = false } = Astro.props;
---

<div
  class:list={[
    "group flex items-center justify-between w-full",
    "flex-col lg:flex-row gap-8 lg:gap-16", 
    { "lg:flex-row-reverse": reverse }, 
    "p-6 md:p-12 mb-12 bg-blue-50 rounded-2xl shadow-lg"
  ]}
>
  <div class="flex-1 pr-8">
    <h3 class="font-display text-7xl text-gray-900">
      {title}
    </h3>
    <p class="font-sans text-gray-600 mt-2">
      {subtitle}
    </p>
  </div>

  <div class="flex-1 flex justify-center items-center pl-8">
    <div
      class:list={[
        "overflow-hidden rounded-lg w-auto max-w-sm shadow-xl",
        "transition-transform duration-300 ease-in-out",
        reverse ? "rotate-2" : "-rotate-2",
        "group-hover:rotate-0",
      ]}
    >
      {imgSrc ? (
        <img
          src={imgSrc}
          alt={title}
          class="w-full h-auto object-cover grayscale transition-all duration-300 ease-in-out group-hover:grayscale-0 group-hover:scale-105"
        />
      ) : (
        <div class="w-full h-72 bg-gray-100 flex items-center justify-center text-gray-400 rounded-lg">
          [Imagen de proyecto]
        </div>
      )}
    </div>
  </div>
</div>